@model Ecommerce.Models.Product

@{
  Layout = null;
}

@*<link href="/css/bootstrap.min.css" rel="stylesheet" />*@
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container">
  <div class="row">
    <div class="col-md-6 center-block">
      <h3>Registration</h3>
      <form asp-action="AddProduct" enctype="multipart/form-data"  method="post">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" asp-for="Name" />
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
          <label>Image</label>
          <input type="file" class="form-control" name="image" asp-for="ImagePath" accept=".png, .jpg" />
          <span class="text-danger" asp-validation-for="ImagePath"></span>
        </div>

        <div class="form-group">
          <label>Description</label>
          <input type="text" class="form-control" asp-for="Description" />
          <span class="text-danger" asp-validation-for="Description"></span>

        </div>

        <div class="form-group">
          <label>Price</label>
          <input type="number" class="form-control" asp-for="Price" />
          <span class="text-danger" asp-validation-for="Price"></span>

        </div>

        <div class="form-group">
          <label>Author</label>
          <input type="text" class="form-control" asp-for="Author" />
          <span class="text-danger" asp-validation-for="Author"></span>

        </div>

        <div class="form-group">
          <label>Category</label>
          <input type="text" class="form-control" asp-for="Category" />
          <span class="text-danger" asp-validation-for="Category"></span>
        </div>
        <div class="form-group">
          <label>Quantity</label>
          <input type="number" class="form-control" asp-for="Quantity" />
          <span class="text-danger" asp-validation-for="Quantity"></span>
        </div>



        @if (TempData["msg"] != null)
        {
          <div class="form-group">
            <span class="text-info">@TempData["msg"]</span>
          </div>
        }

        <button type="submit" class="btn btn-info">Add</button>
        <a class="btn btn-primary" href="/Dashboard/Products">Cancel</a>
      </form>
    </div>
  </div>
</div>
